{% extends "base.html.twig" %}
{% block stylesheets %}
    <link href="{{asset('bundles/sigescontrol/css/estilosGenerales.css') }}" type="text/css" rel="stylesheet" >
{% endblock %}
{% block body %}


        <div class="col-md-10">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                         <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        </button>   
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                      <ul class="nav navbar-nav">
                          <li class="nav-left"><a href="{{path('agregar_clases')}}" ><span class="glyphicon glyphicon-plus-sign"></span> Agregar  <span class="sr-only">(current)</span></a></li>
                        <li class="nav-left"><a href="#" ><span class="glyphicon glyphicon-edit"></span> Modificar </a></li>
                      </ul>
                      <ul class="nav navbar-nav navbar-right">

                        <form class="navbar-form navbar-left" role="search">
                        <div class="form-group">
                          <input type="text" id="filtro" class="form-control" placeholder="Buscar Materia o Profesor">
                        </div>
                            <button type="submit" id="btnFiltro" class="btn btn-default"><span class='glyphicon glyphicon-search'></span></button>
                      </form>
                      </ul>
                    </div><!-- /.navbar-collapse -->
                </div>
            </nav>
            <div class="page-header">
                <h2>Listado de materias y horarios <small>{{hoy}}</small></h2>
            </div>
            <div id="horarios-materias">
                
            </div>
        </div>
    </div>
</div>

               

{% endblock %}

{% block javascripts %}
<script>
    $(document).on("ready",function(){
      $("#horarios-materias").load('{{path("ver_materias_all")}}');
      filtro();
    }); 

    var filtro = function(){
      $("#btnFiltro").on("click",function(e){
        e.preventDefault();
        var filtro = $("#filtro").val();
       $("#horarios-materias").load('{{path("filtrar_materias")}}', {'filtro':filtro});
        console.log(filtro);
      });
    }
</script>

{% endblock %}